rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ======================
    // Restaurants Collection
    // ======================
    match /restaurants/{restaurantId} {
      // Allow read access to all restaurants (for public browsing)
      allow read: if true;
      // Only allow writes for authenticated users (for admin purposes)
      allow write: if request.auth != null;
      
      // ======================
      // Menus Subcollection
      // ======================
      match /menus/{menuId} {
        // Allow read access to all menu items (for public browsing)
        allow read: if true;
        // Only allow writes for authenticated users (for admin purposes)
        allow write: if request.auth != null;
      }
    }
    
    // ======================
    // Orders Collection
    // ======================
    match /orders/{orderId} {
      // Customers can create orders
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;
      
      // Users can read their own orders
      allow read: if request.auth != null
                  && resource.data.userId == request.auth.uid;
      
      // No updates or deletes for now
      allow update, delete: if false;
    }
    
    // ======================
    // Users Collection
    // ======================
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ======================
    // Collection Group Queries (for menus subcollections)
    // ======================
    match /{path=**}/menus/{menuId} {
      allow read: if true;
    }
    
    // ======================
    // Temporary: Allow all reads for development (REMOVE IN PRODUCTION)
    // ======================
    match /{document=**} {
      allow read: if true;
    }
  }
}
